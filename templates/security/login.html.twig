{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
		<label for="inputEmail">Votre adresse mail</label>
		<select name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <option value="">Sélectionner votre compte</option>
        {% for emailChoice in email_choices %}
            <option value="{{ emailChoice }}">{{ emailChoice }}</option>
        {% endfor %}
    </select>
		<label for="inputPassword">Password</label>
		<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password">

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button class="btn btn-lg btn-primary" type="submit">
			Se connecter
		</button>
	</form>
{% endblock %}
